@model coba.Models.Pegawai

<h1>Create Data Pegawai</h1>

<form asp-controller="Pegawais" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="NamaPegawai"></label>
        <input asp-for="NamaPegawai" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Jabatan"></label>
        <input asp-for="Jabatan" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

